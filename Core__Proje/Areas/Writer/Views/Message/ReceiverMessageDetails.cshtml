@model EntityLayer.Concreate.WriterMessage
@{
    ViewData["Title"] = "ReceiverMessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="container">
    <h1 class="i">Gönderilen Mesaj Detayları</h1>
    <br />
    <form class="form-group">
        @Html.HiddenFor(x=>x.WriterMessageID,new {@class="form-control"})
        <br />
        @Html.Label("Alıcı  Adı")
        @Html.TextBoxFor(x=>x.RecevierName,new {@class="form-control"})
        <br />
        @Html.Label("Alıcı  Mail")
        @Html.TextBoxFor(x=>x.Recevier,new {@class="form-control"})
        <br />
        @Html.Label("İçerik")
        @Html.TextAreaFor(x=>x.MessageContent,10,3,new {@class="form-control"})
    </form>
</div>

