@model Core__Proje.Areas.Writer.Models.UserRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Skydash Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/skydash-free-bootstrap-admin-template-main/template/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/skydash-free-bootstrap-admin-template-main/template/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/skydash-free-bootstrap-admin-template-main/template/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/skydash-free-bootstrap-admin-template-main/template/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/skydash-free-bootstrap-admin-template-main/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/skydash-free-bootstrap-admin-template-main/template/images/logo.svg" alt="logo">
                            </div>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <label>Adınız</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    <input type="text" asp-for="Name" class="form-control"/>
                                </div>
                                <div class="form-group">
                                    <label>Soyadınız</label>
                                    <span asp-validation-for="SurName" class="text-danger"></span>
                                    <input type="text" asp-for="SurName" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Kullanıcı Adınız</label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                    <input type="text" asp-for="UserName" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Resim Yolunuz</label>
                                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                    <input type="text" asp-for="ImageUrl" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Şifreniz</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <input type="password" asp-for="Password" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Şifre Tekrar</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    <input type="password" asp-for="ConfirmPassword" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>E Mail</label>
                                    <span asp-validation-for="EMail" class="text-danger"></span>
                                    <input type="email" asp-for="EMail" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Rol</label>
                                    <span asp-validation-for="UserRole" class="text-danger"></span>
                                    <select asp-for="UserRole" class="form-control">
                                        <option selected value="2">Yazar Kaydı</option>
                                    </select>
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-success">Kayıt Ol</button>
                                </div>                             
                            </form>
                            <div class="text-center mt-4 font-weight-light">
                                Zaten Bir Hesabınız Var Mı?<a href="/Writer/Login/Index/" class="text-primary">Giriş Yap</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
</body>

</html>

