@model EntityLayer.Concreate.WriterMessage
@{
    ViewData["Title"] = "AdminMessageSend";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Mesaj Gönderme Paneli</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Başlık</label>
                    @Html.TextBoxFor(x=>x.Subject,new { @class="form-control" } )
                </div>
                <div class="form-group">
                    <label>Alıcı</label>
                    @Html.TextBoxFor(x=>x.Recevier,new { @class="form-control" } )
                </div>
                <div class="form-group">
                    <label>Mesaj</label>
                    @Html.TextBoxFor(x=>x.MessageContent,new { @class="form-control" } )
                </div>
                <button type="submit" class="btn btn-primary mr-2">Gönder</button>
                <button class="btn btn-dark">İptal</button>
            </form>
        </div>
    </div>
</div>

