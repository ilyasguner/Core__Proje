@model EntityLayer.Concreate.Service
@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Hizmet Güncelleme Sayfası</h3>
</div>
@using (Html.BeginForm("EditService", "Service", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.ServiceID)
    <br />
    @Html.Label("Hizmet Başlığı")
    @Html.TextBoxFor(x=>x.MyProperty, new{@class="form-control"})
    <br />
    <label>Tarih Bilgisi</label>
    @Html.TextBoxFor(x=>x.ImageUrl, new{@class="form-control"})
    <br />
    <button class="btn btn-outline-info">Güncelle</button>
}