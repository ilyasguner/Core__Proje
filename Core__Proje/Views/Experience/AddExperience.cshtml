@model EntityLayer.Concreate.Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("AddExperience", "Experience", FormMethod.Post))
{

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Deneyim Ekleme</h4>               
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" class="form-control" name="Name">
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        <input type="date" class="form-control" name="Date">
                    </div>
                    <div class="form-group">
                        <label >Görsel Url</label>
                        <input type="text" class="form-control" id="exampleInputCity1" name="ImageUrl">
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Açıklama</label>
                        <textarea class="form-control" rows="6" name="Description"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>                   
                </form>
            </div>
        </div>
    </div>
}



