@model EntityLayer.Concreate.SocialMedia
@{
    ViewData["Title"] = "EditSocialMedia";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Sosyal Medya Güncelleme Sayfası</h3>
</div>
@using (Html.BeginForm("EditSocialMedia", "SocialMedia", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Sosyal Medya</label>
                        @Html.TextBoxFor(x=>x.Name,new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Link</label>
                        @Html.TextBoxFor(x=>x.Url ,new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>İcon</label>
                        @Html.TextBoxFor(x=>x.Icon ,new{@class="form-control"})
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>
}

