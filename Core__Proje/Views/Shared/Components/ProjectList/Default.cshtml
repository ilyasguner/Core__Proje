@using EntityLayer.Concreate
@model List<Portfolio>
@{
    
    
}

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Proje Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th> Ana Göresel </th>
                                <th> Proje Adı </th>
                                <th> Url </th>
                                <th> Fiyat </th>
                                <th> Tamamlanma Oranı </th>
                                <th> Durum </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td> @item.PortfolioID</td>
                                    <td><img src="@item.ImageUrl"/></td>
                                    <td> @item.Name </td>
                                    <td> @item.ProjectUrl </td>
                                    <td> @item.Price </td>
                                    <td> @item.Value </td>
                                    <td>
                                        @if (@item.Status)
                                        {
                                            <div class="badge badge-outline-success">Tamamlandı</div>

                                        }
                                        else
                                        {

                                            <div class="badge badge-outline-info">Yapım Aşamasında</div>

                                        }
                                    </td>
                                </tr> 
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
